<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainProductRoot"
    android:padding="10sp">

    <LinearLayout
        android:padding="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/no_image"
            android:id="@+id/cardImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"/>


        <LinearLayout
            android:paddingLeft="15sp"
            android:paddingRight="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cardName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="Product Title"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:padding="4sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/rating_star"
                    android:id="@+id/overall_star"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:text="4.2"
                    android:textSize="12sp"
                    android:id="@+id/cardOverallRating"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:text="overall rating"
                    android:textSize="12sp"
                    android:id="@+id/overall_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:padding="4sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-8dp">

                <ImageView
                    android:src="@drawable/rating_star"
                    android:id="@+id/skintone_star"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:text="3.6"
                    android:textSize="12sp"
                    android:id="@+id/cardSkintoneRating"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:text="skin tone match"
                    android:textSize="12sp"
                    android:id="@+id/skintone_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:padding="4sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-8dp">


                <TextView
                    android:text="$5.29"
                    android:textSize="24sp"
                    android:id="@+id/cardPrice"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"/>

                <ImageView
                    android:id="@+id/cardSellerImage"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <ImageView
                android:src="@drawable/eco_certified"
                android:id="@+id/cardEcoCertifiedImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-120dp"
                android:layout_marginTop="-10dp"/>


        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>